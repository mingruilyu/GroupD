<% if @catering.nil? %>
  $('#dish_placeholder').html(
    "<%= escape_javascript(render 'dishes/dish', dish: @dish) %>");
  $('#cart_item_placeholder').html(
    "<%= escape_javascript(render 'dish') %>");
<% else %>
  $('#dish_placeholder').html(
    "<%= escape_javascript(render 'dishes/combo', combo: @catering.combo) %>");
  $('#cart_item_placeholder').html(
    "<%= escape_javascript(render 'combo') %>");
<% end %>
$('#cartitem_modal').modal();
