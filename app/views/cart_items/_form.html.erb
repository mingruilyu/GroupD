<%= form_for(@cart_item) do |f| %>
  <div class="field">
    <%= f.label :quantity %>
    <%= f.select(:quantity, [['1', 1], ['2', 2], ['3', 3]]) %>
  </div>
  <div class="field">        
    <%= f.label :special_instruction %>
    <%= f.text_area :special_instruction %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
