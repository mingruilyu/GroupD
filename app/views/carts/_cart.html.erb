<div id="show_cart">
  <h1>List Dishes in Cart</h1>
  <% if @cart.cart_items.nil? %>
    <p>You don't have any dishes in you cart.</p>
  <% else %>
    <ol>
      <% @cart.cart_items.each do |cart_item| %>
        <% unless cart_item.quantity > 1 %>
          <li><%= cart_item.dish.name %></li>
        <% else %>
          <li><%= cart_item.dish.name %> &times; <%= cart_item.quantity %></li>
        <% end %>
        <%= link_to 'X', cart_cart_item_path(@cart, cart_item), method: 'delete', 
          remote: true %>
      <% end %>
    </ol>
    <%= link_to "Checkout", new_order_path %>
  <% end %>
</div>
