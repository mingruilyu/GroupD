<%= form_for @dish, url: restaurant_dishes_path(
                          restaurant_id: @dish.restaurant_id) do |f| %>
  <div class="field">
    <%= f.hidden_field :type, value: @dish.type %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </div>
  <div class="actions">
    <% puts @dish.restaurant_id.to_s %>
    <%= f.submit "Create Dish" %>
  </div>
<% end %>
