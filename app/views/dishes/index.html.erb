<h1>Listing Dishes</h1>
<% if @dishes.nil? %>
  <p>You don't have any dishes in your menu.</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Image url</th>
        <th>Desc</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @dishes.each do |dish| %>
        <tr>
          <td><%= dish.name %></td>
          <td><%= dish.price %></td>
          <td><%= dish.image_url %></td>
          <td><%= dish.desc %></td>
          <td><%= link_to 'Show', restaurant_dish_path(@restaurant, dish) %></td>
          <td><%= link_to 'Edit', edit_restaurant_dish_path(@restaurant, dish) %></td>
          <td><%= link_to 'Destroy', restaurant_dish_path(@restaurant, dish), 
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= link_to 'Add New Dish', new_restaurant_dish_path(@restaurant) %>
<%= link_to 'Back to restaurant', merchant_path(current_account) %>
