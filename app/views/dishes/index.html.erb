<p id="notice"><%= notice %></p>

<h1>Listing Dishes</h1>

<table>
  <thead>
    <tr>
      <th> name</th>
      <th>Price</th>
      <th>Image url</th>
      <th>Desc</th>
      <th>Count</th>
      <th>Merchant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish. name %></td>
        <td><%= dish.price %></td>
        <td><%= dish.image_url %></td>
        <td><%= dish.desc %></td>
        <td><%= dish.count %></td>
        <td><%= dish.merchant_id %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

